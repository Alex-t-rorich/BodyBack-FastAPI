# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/bodyback_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# API Configuration
PROJECT_NAME=BodyBack Middleware
VERSION=1.0.0
API_V1_STR=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG_MODE=true

# JWT Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(funcName)s:%(lineno)d - %(message)s

# SendPulse
SENDPULSE_USER_ID=
SENDPULSE_SECRET=
SENDPULSE_BOT_ID=

# Sync Configuration
SYNC_BATCH_SIZE=5
SYNC_LOCK_TIMEOUT=600

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8081
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf
